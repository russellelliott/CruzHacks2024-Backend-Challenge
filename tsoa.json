{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "schemes": [ "http" ],
    "basePath": "/api/v0",
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "scopes": {
          "member": "member",
          "admin": "admin"
        }
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "./src/auth/expressAuth.ts"
  }
}